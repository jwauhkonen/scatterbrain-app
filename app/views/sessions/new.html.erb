<div class="signin-page">

	<h1 class="sign-in-or-up-title">Welcome To Scatterbrain!</h1>

	<form action="/session" class="signin-form" method="post">
		<h3 class="form-header">Sign In</h3><br>
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	
		<label class="form-field">Email
			<input type="text" name="user[email]">
		</label><br>
	
		<label class="form-field">Password
			<input type="password" name="user[password]">
		</label><br>
	
		<input type="submit" value="submit" class="btn btn-primary">
		
		<button id="guest-login-button" class="btn btn-primary">Guest Login</button>

	</form>

</div>